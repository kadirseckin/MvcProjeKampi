@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Hakkımda veri listesi</h2>
<hr />

<table class="table table-hover table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>İşlemler</th>

    </tr>
    @foreach (About item in Model)
    {
        <tr>
            <th>@item.AboutID</th>
            <td>@item.AboutTitle</td>
            <td>@item.AboutText</td>

            <td>
                <a href="/About/DeleteAbout/@item.AboutID" class="btn btn-danger"> Sil</a>
            </td>

        </tr>
    }



</table>

<br />
@Html.Action("AboutPartial","About")

